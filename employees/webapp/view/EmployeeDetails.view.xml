<mvc:View
    controllerName="logaligroup.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        
        title="{i18n>employeeDetails}"
    >
        <Panel >
            <FlexBox
               
                height="65px"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Text
                        
                        text="{odataNorthwind>TitleOfCourtesy} {odataNorthwind>LastName}, {odataNorthwind>FirstName}"
                        class="boldText"
                    />
                </items>
            </FlexBox>
            <FlexBox
                
                height="65px"
                alignItems="Start"
                justifyContent="SpaceBetween"
            >
                <items>
                    <VBox >
                        <Text
                           
                            text="{i18n>employeeID}"
                            class="boldText sapUiTinyMarginEnd"
                        />
                        <Text
                            
                            text="{odataNorthwind>EmployeeID}"
                            class="boldText sapUiTinyMarginEnd"
                        />
                    </VBox>
                    <VBox >
                        <Text
                          
                            text="{i18n>title}"
                            class="boldText sapUiTinyMarginEnd"
                        />
                        <Text
                           
                            text="{odataNorthwind>title}"
                            class="boldText"
                        />
                    </VBox>
                </items>
            </FlexBox>
            <FlexBox
                
                alignItems="Start"
                justifyContent="SpaceBetween"
            >
                <items>
                    <HBox >
                        <Text
                            
                            text="{i18n>country}"
                            class="boldText sapUiTinyMarginEnd"
                        />
                        <Text
                            
                            text="{odataNorthwind>Country}"
                            class="boldText sapUiTinyMarginEnd"
                        />
                        <layoutData>
                            <FlexItemData
                                growFactor="3"
                            />
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Text
                           
                            text="{i18n>city}"
                            class="boldText sapUiTinyMarginEnd"
                        />
                        <Text
                            
                            text="{odataNorthwind>City}"
                            class="boldText sapUiTinyMarginEnd"
                        />
                        <layoutData>
                            <FlexItemData
                                growFactor="2"
                            />
                        </layoutData>
                    </HBox>
                    <FlexBox
                        
                        direction="Row"
                        alignItems="Start"
                    >
                        <Text
                            
                            text="{i18n>postalCode}"
                            class="boldText sapUiTinyMarginEnd"
                        />
                        <Text
                            
                            text="{odataNorthwind>PostalCode}"
                            class="boldText sapUiTinyMarginEnd"
                        />
                        <layoutData>
                            <FlexItemData
                                
                                growFactor="1"
                            />
                        </layoutData>
                    </FlexBox>
                </items>
            </FlexBox>
        </Panel>
        <Panel
             class="sapUiSizeCompact"
            backgroundDesign="Transparent"
        >
            <headerToolbar>
                <Toolbar >
                    <Title
                        
                        text="{i18n>incidence} {= ${odataNorthwind>Country} !== 'USA' ? ${i18n>europe} : ${i18n>us}}"
                    />
                    <ToolbarSpacer  />
                    <Button
                      
                        text="{i18n>createIncidence}"
                        press="onCreateIncidence"
                    />
                </Toolbar>
            </headerToolbar>
            <Panel
                id="tableIncidence"
                class="sapUiNoContentPadding"
                backgroundDesign="Transparent"
            />
        </Panel>
        <Panel
            class="sapUiSizeCompact"
            backgroundDesign="Transparent"
            headerText="{i18n>dialogTitle}"
        >
            <core:Fragment
                fragmentName="logaligroup.employees.fragment.TableOrders"
                type="XML"
            />
        </Panel>
    </Page>
</mvc:View>
