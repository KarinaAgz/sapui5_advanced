<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Table
        id="Table1"
        items="{odataNorthwind>Orders}"
        width="700px"
    >
        <columns>
            <Column id="_IDGenColumn1">
                <header>
                    <Label
                        id="Label1"
                        text="{i18n>OrderID}"
                    />
                </header>
            </Column>
            <Column id="Column2">
                <header>
                    <Label
                        id="Label2"
                        text="{i18n>Freight}"
                    />
                </header>
            </Column>
            <Column id="Column3">
                <header>
                    <Label
                        id="Label3"
                        text="{i18n>ShipAddress}"
                    />
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem
                type="Navigation"
                press="toOrderDetails"
            >
                <cells>
                    <Label
                        id="Label4"
                        text="{odataNorthwind>OrderID}"
                    />
                    <Label
                        id="Label5"
                        text="{odataNorthwind>Freight}"
                    />
                    <Label
                        id="Label6"
                        text="{odataNorthwind>ShipAddress}"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
